<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    tools:context="com.example.myapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:text="My Nanodegree Apps!" />
    <Button
        android:text="SPOTIFY STREAMER"
        android:onClick="spotifyBtn"
        style="@style/ButtonStyle"
        />
    <Button

        android:text="SCORES APP"
        android:onClick="scoresBtn"
        style="@style/ButtonStyle"
        />
    <Button

        android:text="LIBRARY APP"
        android:onClick="libraryBtn"
        style="@style/ButtonStyle"
        />
    <Button

        android:text="BUILD IT BIGGER"
        android:onClick="buildItBtn"
        style="@style/ButtonStyle"
        />
    <Button

        android:text="XYZ READER"
        android:onClick="xyzBtn"
        style="@style/ButtonStyle"
        />

    <Button

        android:text="CAPSTONE:MY OWN APP"
        android:onClick="capstoneBtn"
        style="@style/ButtonStyle"
        android:textColor="#FFFFFF"
        android:background="#cc0044"
        />

</LinearLayout>
